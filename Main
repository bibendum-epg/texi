import java.util.*;

public class Main {
    public static void main(String[] args) {
    
        Scanner sc = new Scanner(System.in);
        
        int total_taxi     = sc.nextInt();//タクシーの台数
        int total_distance = sc.nextInt();//移動距離
        
        int initial_distance;//初乗り距離
        int extra_distance;  //加算距離
        int extra_fare;      //加算運賃
        int taxi_fare;       //タクシー料金

        int low_price  =  2147483647;//最安値
        int high_price = -2147483647;//最高値
        
        //タクシーの台数分だけ料金を計算
        while(sc.hasNextInt()) {
        	
        	initial_distance = sc.nextInt();//タクシーXの初乗り距離
        	taxi_fare        = sc.nextInt();//タクシーXの初乗り料金
        	extra_distance   = sc.nextInt();//タクシーXの加算距離
        	extra_fare       = sc.nextInt();//タクシーXの加算運賃
        	
        	//初乗り距離を超える場合
        	if(total_distance >= initial_distance) {
        		taxi_fare += (total_distance-initial_distance)%extra_distance == 0 ? 
        		    (int)Math.ceil((total_distance-initial_distance)/(float)extra_distance + 1)*extra_fare :
        		    (int)Math.ceil((total_distance-initial_distance)/(float)extra_distance)*extra_fare;
        	}
        	//最安値，最高値の更新
        	low_price  = taxi_fare < low_price  ? taxi_fare : low_price;
        	high_price = taxi_fare > high_price ? taxi_fare : high_price;   
        }
        //最安値，最高値の出力
        System.out.print(low_price + " " + high_price);
    }
}
